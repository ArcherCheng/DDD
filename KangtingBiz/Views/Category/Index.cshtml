@model IEnumerable<KangtingBiz.Domain.Models.Category>
@{
    ViewBag.Title = "Index";
}
<header>
    <h2>商品分類</h2>
    <div style="margin:0.86em;overflow:hidden;">
        <div style="float:right;" class="edit-area">
            @Html.ActionLink("建立新分類", "Create", null, new { @class = "k-button" })
        </div>
        <div style="float:left;">
            @using (Html.BeginForm())
            {
                <div>
                    <label>分類名稱：</label><input type="text" name="name" /><input type="submit" value="查詢" />
                </div>                
            }
        </div>
    </div>
</header>
<table>
    <tr>
        <th>@Html.DisplayNameFor(m => m.EntityId)</th>
        <th>@Html.DisplayNameFor(m => m.CategoryName)</th>       
        <th></th>
    </tr>
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(field => item.EntityId)
                </td>
                <td>
                    @Html.DisplayFor(field => item.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.EntityId }) |
                    @Html.ActionLink("檢視", "Details", new { id = item.EntityId }) 
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">
                <p style="text-align:center;"><b> 無任何相關商品 </b></p>
            </td>
        </tr>
    }
</table>